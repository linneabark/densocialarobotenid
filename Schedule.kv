<CustomButton@Button>:
    font_size: 32
    color: 0,0,0,1
    size: 300,400
    background_normal: ''
    background_color: 1, 1, 1, 1
    size_hint: 0.7, 0.8


<ScreenOne>:
    BoxLayout:
        Button:
            text: "Go to week 2"
            on_touch_move:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "screen_two"

<ScreenTwo>:
    BoxLayout:
        Button:
            text: "Go to week 1"
            on_touch_move:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 1
                root.manager.current = "screen_one"