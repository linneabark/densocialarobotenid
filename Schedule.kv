<LeftButton@Button>:
    font_size: 20
    color: 0,0,0,1
    background_normal: ''
    background_color: 1, 0, 0, 1
    size: 150,150
    text: "Previous week"
    pos: 50,500

<RightButton@Button>:
    font_size: 20
    color: 0,0,0,1
    background_normal: ''
    background_color: 1, 0, 0, 1
    size: 150, 150
    pos: 1400,500
    text: "Next week"

<ScreenOne>:
    FloatLayout:
        Button:
            background_normal: "schedule_pics/vecka1.jpeg"
            RightButton:
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.transition.duration = 1
                    root.manager.current = "screen_two"

<ScreenTwo>:
    BoxLayout:
        Button:
            text: "Go to week 1"
            on_touch_move:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 1
                root.manager.current = "screen_one"
