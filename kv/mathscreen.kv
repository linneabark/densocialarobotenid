<Calculator>
    id: calculator
    display: entry
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: 'Images/mathbuttons/greenbackground.png'
        keep_ratio: False
        allow_stretch: True

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            size_hint: 0.1, 0.2
            Button:
                #text: "Tillbaka"
                size: 180, 180
                background_normal: 'Images/appviewbutton.png'
                background_down: 'Images/appviewbutton.png'
                on_press:
                    root.manager.current = 'appview'
                    root.manager.transition.direction = 'right'
                anchor_x: 'left'
                anchor_y: 'top'


        GridLayout:
            cols: 3
            size_hint: 1, .4
            padding: 10
            spacing: 10

            AnchorLayout:
                Button:
                    on_press: entry.text = ""
                    size_hint: .4, .4
                    anchor_x: 'center'
                    anchor_y: 'center'
                    background_normal: 'Images/mathbuttons/clearbutton2.png'
                    background_down: 'Images/mathbuttons/clearbutton2.png'

            AnchorLayout:
                TextInput:
                    id: entry
                    font_size: 300
                    multiline: False
                    anchor_x: 'center'
                    anchor_y: 'center'
                    background_normal: 'Images/redbackground.png'
                    background_down: 'Images/redbackground.png'

            AnchorLayout:
                Button:
                    on_press: root.calculate(entry.text)
                    size_hint: 0.4, 0.4
                    anchor_x: 'center'
                    anchor_y: 'center'
                    background_normal: 'Images/mathbuttons/eqbutton2.png'
                    background_down: 'Images/mathbuttons/eqbutton2.png'


        GridLayout:
            cols: 6
            rows: 1
            size_hint: 1, 0.3
            padding: 10
            spacing: 10

            Label:
                text: ""

            Button:
                on_press: entry.text += "+"
                background_normal: 'Images/mathbuttons/addbutton2.png'
                background_down: 'Images/mathbuttons/addbutton2.png'
            Button:
                on_press: entry.text += "-"
                background_normal: 'Images/mathbuttons/subbutton3.png'
                background_down: 'Images/mathbuttons/subbutton3.png'
            Button:
                on_press: entry.text += "*"
                background_normal: 'Images/mathbuttons/multbutton2.png'
                background_down: 'Images/mathbuttons/multbutton2.png'
            Button:
                on_press: entry.text += "/"
                background_normal: 'Images/mathbuttons/divbutton2.png'
                background_down: 'Images/mathbuttons/divbutton2.png'

            Label:
                text: ""


        GridLayout:
            cols: 10
            size_hint: 1, .2
            padding: 10
            spacing: 10

            Button:
                on_press: entry.text += self.text
                background_normal: 'Images/mathbuttons/0button1.png'
                background_down: 'Images/mathbuttons/0button1.png'
            Button:
                on_press: entry.text += "1"
                background_normal: 'Images/mathbuttons/1button1.png'
                background_down: 'Images/mathbuttons/1button1.png'
            Button:
                on_press: entry.text += "2"
                background_normal: 'Images/mathbuttons/2button1.png'
                background_down: 'Images/mathbuttons/2button1.png'
            Button:
                on_press: entry.text += "3"
                background_normal: 'Images/mathbuttons/3button2.png'
                background_down: 'Images/mathbuttons/3button2.png'
            Button:
                on_press: entry.text += "4"
                background_normal: 'Images/mathbuttons/4button1.png'
                background_down: 'Images/mathbuttons/4button1.png'
            Button:
                on_press: entry.text += "5"
                background_normal: 'Images/mathbuttons/5button1.png'
                background_down: 'Images/mathbuttons/5button1.png'
            Button:
                on_press: entry.text += "6"
                background_normal: 'Images/mathbuttons/6button1.png'
                background_down: 'Images/mathbuttons/6button1.png'
            Button:
                on_press: entry.text += "7"
                background_normal: 'Images/mathbuttons/7button1.png'
                background_down: 'Images/mathbuttons/7button1.png'
            Button:
                on_press: entry.text += "8"
                background_normal: 'Images/mathbuttons/8button1.png'
                background_down: 'Images/mathbuttons/8button1.png'
            Button:
                on_press: entry.text += "9"
                background_normal: 'Images/mathbuttons/9button1.png'
                background_down: 'Images/mathbuttons/9button1.png'

