<MathScreen>
    Image:
        allow_stretch: True
        source: 'Images/matte.jpg'
        size: self.size
        Button:
            background_color: 0,0,0,0
            on_touch_down:
                app.root.transition = SlideTransition(direction = 'right')
                root.manager.current = "appview"

<Calculator>
    id: calculator
    display: entry
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: "guimathbg.jpg"
        keep_ratio: False
        allow_stretch: True

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            size_hint: 1, .2
            Button:
                text: "Tillbaka"
                on_press:
                    root.manager.current = 'appview'
                size_hint: 0.4, 0.4
                anchor_x: 'center'
                anchor_y: 'center'


        GridLayout:
            cols: 3
            size_hint: 1, .4
            padding: 10
            spacing: 10

            AnchorLayout:
                Button:
                    on_press: entry.text = ""
                    size_hint: .4, .4
                    anchor_x: 'center'
                    anchor_y: 'center'
                    background_normal: 'Images/mathbuttons/clearbutton.png'
                    background_down: 'Images/mathbuttons/clearbutton.png'

            AnchorLayout:
                TextInput:
                    id: entry
                    font_size: 300
                    multiline: False
                    anchor_x: 'center'
                    anchor_y: 'center'

            AnchorLayout:
                Button:
                    on_press: root.calculate(entry.text)
                    size_hint: 0.4, 0.4
                    anchor_x: 'center'
                    anchor_y: 'center'
                    background_normal: 'Images/mathbuttons/eqbutton.png'
                    background_down: 'Images/mathbuttons/eqbutton.png'


        GridLayout:
            cols: 6
            rows: 1
            size_hint: 1, .2
            padding: 10
            spacing: 10

            Label:
                text: ""

            Button:
                on_press: entry.text += "+"
                background_normal: 'Images/mathbuttons/addbutton.png'
                background_down: 'Images/mathbuttons/addbutton.png'
            Button:
                on_press: entry.text += "-"
                background_normal: 'Images/mathbuttons/subbutton.png'
                background_down: 'Images/mathbuttons/subbutton.png'
            Button:
                on_press: entry.text += "*"
                background_normal: 'Images/mathbuttons/multbutton.png'
                background_down: 'Images/mathbuttons/multbutton.png'
            Button:
                on_press: entry.text += "/"
                background_normal: 'Images/mathbuttons/divbutton.png'
                background_down: 'Images/mathbuttons/divbutton.png'

            Label:
                text: ""


        GridLayout:
            cols: 10
            size_hint: 1, .2
            padding: 10
            spacing: 10

            Button:
                text: "0"
                on_press: entry.text += self.text
            Button:
                on_press: entry.text += "1"
                background_normal: 'Images/mathbuttons/1button.png'
                background_down: 'Images/mathbuttons/1button.png'
            Button:
                on_press: entry.text += "2"
                background_normal: 'Images/mathbuttons/2button.png'
                background_down: 'Images/mathbuttons/2button.png'
            Button:
                on_press: entry.text += "3"
                background_normal: 'Images/mathbuttons/3button.png'
                background_down: 'Images/mathbuttons/3button.png'
            Button:
                on_press: entry.text += "4"
                background_normal: 'Images/mathbuttons/4button.png'
                background_down: 'Images/mathbuttons/4button.png'
            Button:
                on_press: entry.text += "5"
                background_normal: 'Images/mathbuttons/5button.png'
                background_down: 'Images/mathbuttons/5button.png'
            Button:
                on_press: entry.text += "6"
                background_normal: 'Images/mathbuttons/6button.png'
                background_down: 'Images/mathbuttons/6button.png'
            Button:
                on_press: entry.text += "7"
                background_normal: 'Images/mathbuttons/7button.png'
                background_down: 'Images/mathbuttons/7button.png'
            Button:
                on_press: entry.text += "8"
                background_normal: 'Images/mathbuttons/8button.png'
                background_down: 'Images/mathbuttons/8button.png'
            Button:
                on_press: entry.text += "9"
                background_normal: 'Images/mathbuttons/9button.png'
                background_down: 'Images/mathbuttons/9button.png'

