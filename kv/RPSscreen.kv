                anchor_y: 'top'
                Button:
                    size_hint: None, None
                    background_normal: 'Images/RPSbuttons/playbutton.png'
                    background_down: 'Imges/RPSbuttons/playbutton.png'
                    size: 300, 200
                    #pos: 315,220
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.transition.duration = 0.5
                        root.manager.current = 'two'


