        keep_ratio: False
        allow_stretch: True

    BoxLayout:
        orientation: "vertical"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            Button:
                size: 200, 200
                size_hint: None, None
                background_normal: 'Images/appviewbutton.png'
                background_down: 'Images/appviewbutton.png'
