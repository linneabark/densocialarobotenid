<RPSFaceScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        rows: 2
        row_force_default: True
        row_default_height: 300
        Image:
            allow_stretch: True
            source: 'Images/Face/eyesClosed.jpg'
            #source: root.img_blinking
            size_hint: 1, 1
            #size: 750, 250
            pos: 0, 100
            #pos: (0,150)
            keep_data: True
            #on_touch_down: root.onTouch()

        Image:
            allow_stretch: True
            source: 'Images/Face/mouthClosed.jpg'
            size_hint: 1, 1
            pos: 100, 0

        #Button:
          #  background_color: 0,0,0,0
