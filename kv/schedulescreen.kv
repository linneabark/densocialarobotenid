<ScheduleScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: "Images/schedulebuttons/pinkbackground.png"
        keep_ratio: False
        allow_stretch: True
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            anchor_y: 'top'
            anchor_x: 'center'
            Button:
                background_normal: 'Images/appviewbutton.png'
                background_down: 'Images/appviewbutton.png'
                size_hint: None, None
                size: 150, 150
        #pos: (1350,700)
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.transition.duration = 1
                    root.manager.current = "appview"
        BoxLayout:
            orientation: 'horizontal'
            Image:
                allow_stretch: True
                source: 'Images/schedule_pics/vecka1.png'
                size: self.size
        #Button:
        #    background_color: 0,0,0,0
        #    on_touch_down:
        #       app.root.transition = SlideTransition(direction = 'left')
        #       root.manager.current = "appview"
            AnchorLayout:
                anchor_y: 'center'
                Button:
                    background_normal: 'Images/rightarrowbutton.png'
                    background_down: 'Images/rightarrowbutton.png'
                    size_hint: 0.2, 0.2
        #pos: (1400,350)
                    on_press:
                        root.manager.transition.direction = "left"
                        root.manager.transition.duration = 1
                        root.manager.current = "s2"
