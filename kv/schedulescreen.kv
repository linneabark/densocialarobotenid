<ScheduleScreen>
    Image:
        allow_stretch: True
        source: 'schedule_pics/vecka1.jpeg'
        size: self.size
        #Button:
        #    background_color: 0,0,0,0
        #    on_touch_down:
         #       app.root.transition = SlideTransition(direction = 'left')
         #       root.manager.current = "appview"

        Button:
            background_normal: 'Images/appviewbutton.png'
            background_down: 'Images/appviewbutton.png'
            size_hint: None, None
            size: 150, 150
            pos: (1350,700)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "appview"
        Button:
            background_normal: 'Images/arrowbutton.png'
            pos: (1400,350)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "appview"
