<MainScreen>:
    FloatLayout:
        Image:
            allow_stretch: True
            source: 'faceimages/face4.gif'
            size: self.size
            pos: (0,150)
            keep_data: True
            on_touch_down: source = 'test.png'
        Image:
            allow_stretch: True
            source: 'faceimages/mouthgif.gif'
            size: self.size
            pos: (0,-280)
            on_touch_down: source = 'test.png'
    FloatLayout:
        #size: 50, 50
        Button:
            size_hint: 0.1, 0.1
            pos: root.center_x-50, 200
            #on_press: root.play()
            background_normal: 'schedule.jpg'
            on_touch_move:
                app.root.transition = SlideTransition(direction = 'up')
                root.manager.current = "schedule"
