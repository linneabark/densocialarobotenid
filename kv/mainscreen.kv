<MainScreen>:
    GridLayout:
        cols: 1
        rows: 3
        row_force_default: True
        row_default_height: 200
        Image:
            allow_stretch: True
            source: 'faceimages/eyesseveral.gif'
            size: self.size
            #pos: (0,150)
            keep_data: True
            #on_touch_down: root.onTouch()
        Image:
            allow_stretch: True
            source: root.img_src
            size: self.size
            

        Button:
            background_color: 0,0,0,0
            on_touch_down:
                app.root.transition.direction = 'up'
                root.manager.current = 'appview'

