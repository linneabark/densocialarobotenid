<TalkingMathvoiceScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        rows: 3
        row_force_default: True
        row_default_height: 600
        Image:
            allow_stretch: True
            source: 'Images/Face/math2.gif'
            size_hint: 1, 1
            pos: 0, 100
            keep_data: True

        Image:
            allow_stretch: True
            source: 'Images/Face/speaking.gif'
            size_hint: 1, 1
            pos: 100, 0

        Button:
            background_color: 0,0,0,0
            #on_touch_down: