<Appview>
    BoxLayout:
        Button:
            center: self.parent.center
            font_size: 14
            height: 28
            background_normal: ''
            background_color: (224, 0, 224, 1)
            text: "Schema"
            on_press:
                app.root.transition = SlideTransition(direction = 'up')
                root.manager.current =  "schedule"

        Button:
            center: self.parent.center
            font_size: 14
            height: 28
            background_normal: ''
            background_color: (1.0, 0.0, 0.0, 1.0)
            text: "Räkna"
            on_press:
                app.root.transition = SlideTransition(direction = 'up')
                root.manager.current =  "math"

        Button:
            center: self.parent.center
            font_size: 14
            height: 28
            background_normal: ''
            background_color: (1, .3, .4, .85)
            text: "Sten, sax, påse"
            on_press:
                app.root.transition = SlideTransition(direction = 'up')
                root.manager.current =  "rps"