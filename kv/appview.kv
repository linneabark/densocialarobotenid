<Appview>
   #Change backgroundcolor
    #canvas:
       # Color:
          #  rgba:
       # Rectangle:
       #     size: self.size
        #    pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        GridLayout:
            cols: 4
            rows: 1
            size_hint: 1, .4
            spacing: 10

            Label:
                text: ""

            Button:
                text: "Test"
                size_hint: .3, .2
                on_press:
                    root.manager.current = "main"
                    #root.manager.current =  "main"
                    #root.listen()
            Button:
                size_hint: .3, .2
                id:btnExit
                text:"Exit"
                on_press: app.quit()

            Label:
                text: ""


        GridLayout:
            cols: 4
            spacing: 20
            padding: 20

            Button:
                #center: self.parent.center
                font_size: 28
                #pos: (10,100)
                background_normal: 'Images/schedulebuttons/schemaknapp4.png'
                background_down: 'Images/schedulebuttons/schemaknapp4.png'
                #background_color: (1, .3, .4, .85)
                on_press:
                    app.root.transition = SlideTransition(direction = 'right')
                    root.manager.current =  "schedule"

            Button:
                #center: self.parent.center
                font_size: 28
                background_normal: 'Images/RPSbuttons/RPS5.png'
                background_down: 'Images/RPSbuttons/RPS5.png'
                #pos: (10,100)
                #background_color: (1, .3, .4, .85)
                on_press:
                    app.root.transition = SlideTransition(direction = 'up')
                    root.manager.current =  "one"
                    #root.launchRPS()

            Button:
                #center: self.parent.center
                font_size: 28
                #pos: (10,100)
                background_normal: 'Images/mathbuttons/mattknapp5.png'
                background_down: 'Images/mathbuttons/mattknapp5.png'
                #background_color: (1, .3, .4, .85)
                on_press:
                    app.root.transition = SlideTransition(direction = 'left')
                    root.manager.current =  "calculator"

