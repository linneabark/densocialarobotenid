<Appview>
    GridLayout:
        spacing: 100
        cols: 4
        padding: 180,250
        Button:
            #center: self.parent.center
            font_size: 28
            size_hint: None, None
            size: 300, 300
            #pos_hint: {'center_x': 5.0, 'center_y': 5.0}
            background_normal: ''
            background_color: (224, 0, 224, 1)
            text: "Schema"
            on_press:
                app.root.transition = SlideTransition(direction = 'up')
                root.manager.current =  "schedule"

        Button:
            #center: self.parent.center
            font_size: 28
            size_hint: None, None
            size: 300, 300
            #pos_hint: {'center_x': 10.0, 'center_y': 10.0}
            background_normal: ''
            background_color: (1.0, 0.0, 0.0, 1.0)
            text: "Räkna"
            on_press:
                app.root.transition = SlideTransition(direction = 'up')
                root.manager.current =  "math"

        Button:
            #center: self.parent.center
            font_size: 28
            size_hint: None, None
            size: 300, 300
            #pos: (10,100)
            background_normal: 'sten_sax.png'
            #background_color: (1, .3, .4, .85)
            text: "Sten, sax, påse"
            on_press:
                app.root.transition = SlideTransition(direction = 'up')
                root.manager.current =  "rps"

        Button:
            id: myButton
            Image:
                source: "./sten_sax.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                on_touch_down: print("hej")
